{
  "manifest_version": 3,
  "name": "Reading Calculation",
  "description": "Add the reading time to Chrome Extension documentation articles",
  "version": "1.0.0",
  "permissions": [
    "tabs" ,
    "bookmarks",
    "storage",
    "identity"
  ],
  "action": {
    "default_icon": {
      "16": "icon_16.png",
      "32": "icon_32.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },

  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}